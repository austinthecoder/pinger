= form_for email_callback do |f|
  = render 'shared/form_errors', :errors => email_callback.errors.full_messages

  .label.input
    %div= f.label :label
    %div= f.text_field :label, max_length: 255, size: 50

  .email.input
    %div= f.label :to, 'Email'
    %div= f.text_field :to, max_length: 255, size: 50

  %p
    %button
      = email_callback.new_record? ? 'Add' : 'Save'
      email callback