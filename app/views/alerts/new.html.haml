%p= link_to 'Back', root_path

%h2 Add Alert

= form_for alert do |f|
  = render 'shared/form_errors', :errors => alert.errors.full_messages

  .location.input
    %div= f.label :location_id, 'For'
    %div= f.select :location_id, alert.location_options_for_select

  .code_is_not.input
    %div= f.label :code_is_not, 'Response status code is not'
    %div= f.text_field :code_is_not, max_length: 255, size: 20

  .times.input
    %div= f.label :times, 'Times in a row'
    %div= f.text_field :times, max_length: 255, size: 20

  .alert_via.input
    %div= f.label :email_callback_id, 'Alert via'
    %div
      - if alert.email_callback_options_for_select.empty?
        There are no email callbacks.
        = link_to "Add one", new_email_callback_path
      - else
        = f.select :email_callback_id, alert.email_callback_options_for_select

  %p
    %button Add alert